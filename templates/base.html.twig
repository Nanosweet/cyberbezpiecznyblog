<!doctype html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>{% block title %}Blog - Cyberbezpieczeństwo{% endblock %}</title>

    <!-- Bootstrap core CSS -->
    {% block stylesheets %}
        <link href="{{ asset('build/vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">

        <!-- Custom fonts for this template -->
        <link href="{{ asset('build/css/homepage.css') }}" rel="stylesheet" type="text/css">
        <link href="{{ asset('build/vendor/fontawesome-free/css/all.min.css') }}" rel="stylesheet" type="text/css">
        <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
        <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>

        <!-- Custom styles for this template -->
        <link href="{{ asset('build/css/clean-blog.min.css')}}" rel="stylesheet">
    {% endblock %}

</head>

<body>
{% block nav %}
<nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
    <div class="container">
        <a class="navbar-brand" href="#">Cyberbezpieczeństwo</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            Menu
            <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_homepage') }}">Główna</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Artykuły</a> <!-- TODO articles_page -->
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Blog</a> <!-- TODO blog_page -->
                </li>
                {% if is_granted('ROLE_USER') %}
                    <li class="nav-item">
                        <!-- TODO - tworzenie posta -->
                        <a class="nav-link" href="#">Napisz</a>
                    </li>
                    <li class="nav-item">
                        <!-- TODO - dashboard konta -->
                        <a class="nav-link" href="#">Konto</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Wyloguj się</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">Logowanie</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('app_register')}}">Rejestracja</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
{% endblock %}
{% block body %}
{% endblock %}
<footer>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <ul class="list-inline text-center">
                    <li class="list-inline-item">
                        <a href="{{ path('app_homepage') }}">
                             <span class="fa-stack fa-lg">
                                 <i class="fas fa-home fa-stack-2x"></i>
                             </span>
                        </a>
                    </li>
                    <li class="list-inline-item">
                        <a href="https://github.com/Nanosweet/blog">
                <span class="fa-stack fa-lg">
                  <i class="fas fa-circle fa-stack-2x"></i>
                  <i class="fab fa-github fa-stack-1x fa-inverse"></i>
                </span>
                        </a>
                    </li>
                </ul>
                <p class="copyright text-muted">Dariusz Parysek &copy; Praca dyplomowa 2019 - 2020</p>
            </div>
        </div>
    </div>
</footer>
{% block javascripts %}
    <!-- Bootstrap core JavaScript -->
    <script src="{{ asset('build/vendor/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('build/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>

    <!-- Custom scripts for this template -->
    <script src="{{ asset('build/js/clean-blog.min.js') }}"></script>
{% endblock %}
</body>
</html>
