{% block head %}
    <head>

        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">

        {% block title %}
            <title>Admin | Cyberbezpiecznyblog</title>
        {% endblock %}

        <!-- Custom fonts for this template--><!-- vendor/fontawesome-free/css/all.min.css -->
        <link href="{{ asset('build/vendor/fontawesome-free/css/all.min.css') }}" rel="stylesheet" type="text/css">
        <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

        <!-- Custom styles for this template css/sb-admin-2.min.css-->
        <link href="{{ asset('build/css/sb-admin-2.min.css') }}" rel="stylesheet">

    </head>
{% endblock %}

{% block body %}
<body id="page-top">

<!-- Page Wrapper -->
<div id="wrapper">

    <!-- Sidebar -->
    {{ include('admin/admin_sidebar.html.twig') }}
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <!-- Topbar -->
            <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">
            </nav>
            <!-- End of Topbar -->

            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="d-sm-flex align-items-center justify-content-between mb-4">

                </div>

                <!-- Content Row -->
                <div class="row">

                    <!-- Użytkownicy -->
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-primary shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Wszystkich Użytkowników</div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">{{ user | length }}</div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-user fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Artykuły -->
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-success shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <a href="{{path ('admin_articles_all') }}">
                                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Wszystkich artykułów</div>
                                        </a>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">{{ articles | length }}</div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-newspaper fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <!-- Komentarze -->
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-warning shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Wszystkich Komentarzy</div>
                                        <div class="h5 mb-0 font-weight-bold text-gray-800">{{ comment | length }}</div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-comments fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Polubienia -->
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-info shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Wszystkie Polubienia</div>
                                        <div class="row no-gutters align-items-center">
                                            <div class="col-auto">
                                                <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">{{ likes | length }}</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-thumbs-up fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Content Row -->

                <div class="row">
                    <!-- Ostatnio dodane artykuły -->
                    <div class="col">
                        <div class="card shadow mb-4">
                            <!-- Card Header  -->
                            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                <h6 class="m-0 font-weight-bold text-primary">Ostatnio dodane artykuły</h6>
                            </div>
                            <!-- Card Body -->
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                            <table class="table">
                                                <thead class="bg-light">
                                                    <tr class="border-0">
                                                        <th class="border-0">Id</th>
                                                        <th class="border-0">Tytuł</th>
                                                        <th class="border-0">Podtytuł</th>
                                                        <th class="border-0">Komentarzy</th>
                                                        <th class="border-0">Polubienia</th>
                                                        <th class="border-0">Data publikacji</th>
                                                        <th class="border-0">Autor</th>
                                                        <th class="border-0">Status</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                {% for row in article %}
                                                    <tr>
                                                        <td>{{ row.id }}</td>
                                                        <td>
                                                            <a href="{{ path('app_article', {slug: row.slug}) }}" style="text-decoration: none;">
                                                                {{ row.title }}
                                                            </a>
                                                        </td>
                                                        <td>{{ row.subtitle }} </td>
                                                        <td>{{ row.comments|length }}</td>
                                                        <td>{{ row.likes }}</td>
                                                        <td>{{ row.publishedAt | date('d.m.Y') }}</td>
                                                        <td>{{ row.author.firstname }} {{ row.author.lastname }}</td>
                                                        <td><span class="badge-dot badge-brand mr-1"></span>InTransit </td>
                                                    </tr>
                                                {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Content Row -->
                <div class="row">
                    <!-- Content Column -->
                    <div class="col">
                        <!-- Główny cel serwisu - pracy -->
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary">Główny cel serwisu - pracy</h6>
                            </div>
                            <div class="card-body">
                                <p>Celem pracy jest zaprojektowanie i implementacja serwisu do udostępniania treści o
                                    cyberbezpieczeństwie.</p>
                                <p class="mb-0">Serwis jest dedykowany dla zwyczajnych użytkowników sieci Internet,
                                    aby dzięki treściom tutaj zawartym wzrosła ich świadomość dotycząca zagrożeń w sieci.</p>
                            </div>
                        </div>
                    </div>
                </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->


    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                <a class="btn btn-primary" href="login.html">Logout</a>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap core JavaScript-->
<!--<script src="vendor/jquery/jquery.min.js"></script>-->
<script src="{{ asset('build/vendor/jquery/jquery.min.js') }}"></script>
<!-- -->
<script src="{{ asset('build/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>

<!-- Core plugin JavaScript-->
<script src="{{ asset('build/vendor/jquery-easing/jquery.easing.min.js') }}"></script>

<!-- Custom scripts for all pages-->
<script src="{{ asset('build/js/sb-admin-2.min.js') }}"></script>

<!-- Page level plugins -->
<script src="{{ asset('build/vendor/chart.js/Chart.bundle.min.js') }}"></script>

<!-- Page level custom scripts -->
<script src="{{ asset('build/js/demo/chart-area-demo.js') }}"></script>
<script src="{{ asset('build/js/demo/chart-pie-demo.js') }}"></script>
</body>
{% endblock %}