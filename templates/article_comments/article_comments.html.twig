{% block body %}
  <!-- Sekcja komentarzy -->
  <comment>
    <div class="container">
      <div class="row">
        <div class="col text-left">
          <hr>
              <i>8 Komentarzy</i>
          <br><br>
        </div>
      </div>
    </div>
    {% for comment in comments %}
    <div class="container">
      <div class="row">
        <div class="col d-flex justify-content-start">
          <small>{{ comment.authorName }}</small>
        </div>
        <div class="col d-flex justify-content-end">
          <small>Data dodania</small>
        </div>
        <hr>
        <div class="container">
          <div class="row">
            <div class="col">
              <small>
                {{ comment.content }}
              </small>
              <hr>
            </div>
          </div>
        </div>
      </div>
    </div>
    {% endfor %}
  </comment>
{% endblock %}
