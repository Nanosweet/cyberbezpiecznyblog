{% extends 'base.html.twig' %}

{% block title %}Rejestracja{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card card-signin my-5">
                    <div class="card-body">
                        <h5 class="card-title text-center">Stwórz konto</h5>
                        <!-- FORMULARZ REJESTRACYJNY -->
                        {{ form_start(registerForm) }}
                        {{ form_row(registerForm.imie) }}
                        {{ form_row(registerForm.nazwisko) }}
                        {{ form_row(registerForm.email) }}
                        {{ form_row(registerForm.password) }}
                        <button class="btn btn-lg btn-dark btn-block" type="submit" >
                            <span class="button-text">Zarejestruj się!</span>
                        </button>

                        <a class="btn btn-lg btn-dark btn-block" href="{{ path('app_login') }}">
                            <span class="button-text">Masz już konto?</span>
                        </a>

                        {{ form_end(registerForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}